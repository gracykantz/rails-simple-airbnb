<h1>All our Flats</h1>
<p>You searched for . We found 3 flats out of our 3 on our website.</p>
<%= link_to "Add flat", new_flat_path(@flat) %>
<div class="container">
  <% @flats.each do |flat| %>
    <div class="card m-2 d-inline-flex align-items-stretch">
      <img class="img-top" src="https://picsum.photos/200" alt="random-img">
      <div class="card-body card-info text-center">
        <h2 class="card-title"><%= flat.name %></h2>
        <p class="card-text"><%= flat.address %></p>
        <p class="card-text"><i class="fas fa-user-friends"></i> <%= "#{flat.number_of_guests}"%> <i class="fas fa-euro-sign"></i> <%= "#{flat.price_per_night}" %></p>
        <div class="card-body border-top card-links">
          <%= link_to "View", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this listing?" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
